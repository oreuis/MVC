@model WebApplication1.Models.myclass
@{
    ViewBag.Title = "Index";
}

<html>

<head>


</head>

<body>

    <h2>Aplikacja</h2>

    <div class="row">

        @using (Html.BeginForm("/Index", "myclass", FormMethod.Post))
        {

            <div class="form-group">
                <label for="jeden">Wybierz swoją nazwę</label>
                <input type="text" class="form-control" id="jeden" name="jeden" value="@Model.jeden" />
            </div>


            <div id="wyb">
                <h4>Wybierz</h4>
                <button type="submit" class="btn btn-info" id="add" value="p1" name="wykonaj">pocztowka.pl</button>
                <button type="submit" class="btn btn-info" id="min" value="p2" name="wykonaj">poczta.eu</button>
                <button type="submit" class="btn btn-info" id="min" value="p3" name="wykonaj">pczt.pl</button>
            </div>

            <div class="form-group">
                <label for="trzy">Twój adres</label>
                <input type="text" class="form-control" id="trzy" name="trzy" value="@Model.trzy" />
            </div>

        }
    </div>
</body>

</html>



